{
  "name": "form-validation-manager",
  "version": "2.0.1",
  "description": "VueJs validation manager, model based",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "webpack --mode production",
    "test": "nyc mocha -r ts-node/register 'test/**/*.ts'",
    "test-validators": "mocha -r ts-node/register 'test/validators/**/*.ts'",
    "test-fvm": "mocha -r ts-node/register 'test/fvm/**/*.ts'",
    "test-vue3": "vue-cli-service test:unit test-integration/vue3/",
    "test-vue2": "npm run build && cd test-integration/vue2 && npm run test"
  },
  "author": "thorolf13@gmail.com",
  "homepage": "https://github.com/Thorolf13/form-validation-manager",
  "license": "LGPL3",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@vue/cli-plugin-unit-jest": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/test-utils": "^2.2.7",
    "@vue/test-utils-vue2": "npm:@vue/test-utils@1.3.3",
    "babel-jest": "^29.4.0",
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4",
    "vue": "^3.2.45",
    "vue-demi": "^0.13.11",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.7.14",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "typescript-declaration-webpack-plugin": "^0.2.2"
  },
  "files": [
    "dist/*",
    "src/*",
    "types/*"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/script-setup-uses-vars": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  }
}
